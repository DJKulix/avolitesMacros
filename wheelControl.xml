    <description> Increments Intesity Wheel  </description>
    <sequence>
        <step>
            Programmer.Editor.Fixtures.IncrementAttribute(Programmer.Editor.Fixtures.GetControlIdFromName("Red"), Math.Cast.ToSingle(1), 1.0,  true)
